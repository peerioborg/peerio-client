{
	"name": "Peerio",
	"short_name": "Peerio",
	"description": "A simple and secure way to share private messages and files and store them in the cloud. End-to-end encrypted, open source, audited, free.",
	"version": "1.2.2",
	"author": "Technologies Peerio Inc.",
	"minimum_chrome_version": "39",
	"manifest_version": 2,
	"offline_enabled": true,
	"icons": {
		"16": "img/icon16.png",
		"32": "img/icon32.png",
		"48": "img/icon64.png",
		"128": "img/icon128.png",
		"256": "img/icon256.png",
		"512": "img/icon512.png",
		"1024": "img/icon1024.png"
	},
	"app": {
		"background": {
			"scripts": [
				"background.js"
			]
		}
	},
	"permissions": [
		{
			"fileSystem": [
				"write"
			]
		},
		"notifications",
		"proxy",
		"storage",
		"fileBrowserHandler",
		"https://peerio.blob.core.windows.net/*"
	]
}
